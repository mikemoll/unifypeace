<div class="container">	
	<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<fieldset>
					<h2 class="text-center">Please Sign In</h2>
					<hr class="colorgraph">
					<div class="form-group">
					  <%= f.text_field :login, autofocus: true, class: "form-control input-lg", placeholder: "Email Address Or Username" %>
					 	<%= hidden_field_tag :slug, nil, value: params[:slug] %>
					</div>
					<div class="form-group">
				    <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password"%>
				  </div>
				  <div class="form-group">
					  <% if devise_mapping.rememberable? -%>
					    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
					  <% end -%>
						<%= render "devise/shared/links" %>
					</div>
					<hr class="colorgraph">
					<div class="row text-center">
						<div class="col-xs-12">
	  					<%= f.submit "Sign in", class: "btn btn-lg btn-success btn-block" %>
	  				</div>
	  			</div>
	  		</fieldset>
			<% end %>
		</div>
	</div>
</div>
