<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Website link</th>
      <th>Date and time</th>
      <th>Description</th>
      <th>Location</th>
      <th>Organizer name</th>
      <th>Organizer email</th>
      <th>Affiliated organization</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.category_id %></td>
        <td><%= event.website_link %></td>
        <td><%= event.date_and_time %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td><%= event.organizer_name %></td>
        <td><%= event.organizer_email %></td>
        <td><%= event.affiliated_organization_id %></td>
        <td><%= event.lat %></td>
        <td><%= event.long %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

